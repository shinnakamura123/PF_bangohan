<div class="main-container p-5">
  <div class="row">
    <div class="text-danger mt-5 offset-md-3"><%= flash[:alert] %></div>
  </div>
  <h2 class="sessions__top--title">ログイン</h2>
  <div class ="row">
    <div class ="col-10 mx-auto">
      <p class="mb-3 font-weight-bold">会員の方はこちらからログイン</p>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="row form-group offset-md-1">
          <%= f.label :name, "アカウント名",class: "col-md-3" %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "col-md-4" %>
        </div>

        <div class="row form-group offset-md-1">
          <%= f.label :password, "パスワード",class: "col-3" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "col-md-4" %>
        </div>

        <div class="mt-4">
          <%= f.submit "ログイン", class: "btn btn-primary col-2 offset-md-4" %>
        </div>
      <% end %>

      <div class="row mt-5">
        <p class="mb-3 font-weight-bold">
          会員登録がお済みでない方は
          <%= link_to 'こちら', new_user_registration_path %>
        </p>
      </div>
    </div>
  </div>
</div>
