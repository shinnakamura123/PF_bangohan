<div class = "one-container p-5">
    <h1 class="card-title-top font-weight-bold">New recipe registration</h1>
    <%= render 'layouts/errors', obj:  @recipe %>
    <%= form_with model: @recipe, url: recipes_path(@recipe), method: :post, local: true do |f| %>
        <%= render 'form', f: f, recipe: @recipe %>
        <div class="text-center">
            <%= f.submit "レシピを作成する", class: "btn btn-success" %>
        </div>
    <% end %>
    <div class ="row p-5"></div>
</div>
