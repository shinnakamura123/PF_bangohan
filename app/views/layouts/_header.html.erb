<header class="shadow-sm">
    <nav class="navbar navbar-light">
      <div class = "container">
        <a class="navbar-brand p-3 "href="/"><%= image_tag asset_path('bangohan.png'),size: "200x80" %></a>
        <div>
          <% if user_signed_in? %>
            ようこそ、<%= current_user.name %>さん。
          <% end %>
        </div>
        <div style= "color: green;"><%= flash[:notice] %></div>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to home_about_path, class: 'nav-link text-dark' do %>
                  <span class="text-dark">About <i class="fas fa-bread-slice"></i></span>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to user_path(current_user), class: 'nav-link text-dark' do %>
                  <span class="text-dark">マイページ <i class="fas fa-file-alt"></i></span>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to user_menus_path(current_user.id), class: 'nav-link text-dark' do %>
                  <span class="text-dark">献立予定 <i class="fas fa-calendar"></i></span>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to users_path, class: 'nav-link text-dark' do %>
                  <span class="text-dark">会員一覧 <i class="fas fa-user"></i></span>
                <% end %>
              </li>
              <li class="nav-item text-white">
                <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link text-dark' do %>
                  <span class="text-dark">ログアウト <i class="fas fa-sign-out-alt"></i></span>
                <% end %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to  new_user_registration_path, class: 'nav-link text-dark' do %>
                  <span class="text-dark">新規登録 <i class="fas fa-user-plus"></i></span>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to new_user_session_path, class: 'nav-link text-dark' do %>
                　<span class="text-dark">サインイン <i class="fas fa-sign-in-alt"></i></span>
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
  </header>