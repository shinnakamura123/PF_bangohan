<div class='main-container p-5'>
  <div class='row'>
    <div class = "mx-auto", style="width: 75%;">
    <h1 class="food__top--title">材料名一覧</h3>
    <div id ="food_errors">
      <%= render 'layouts/errors', obj: @food %>
    </div>
      <table class = "table table-sm">
        <thead class="thead-light">
          <th>材料名</th>
          <th>単位</th>
          <th></th>
        </thead>
        <tbody id="foods">
            <%= render "foods", foods: @foods, obj: @food %>
        </tbody>
      </table>
      <%= render 'food_form', food: @food %>
      <div class="text-center">
        <%= link_to "レシピ新規登録へ戻る", new_recipe_path, class: "btn btn-info" %>
      </div>
    </div>
  </div>
</div>

